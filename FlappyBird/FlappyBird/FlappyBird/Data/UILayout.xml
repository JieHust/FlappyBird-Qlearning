<fancyUILayout>
  <fuiLabel Name="ScoreLabel" Left="0" Top="50" Width="800" Height="60" Visiable="false"
            FontName="ScoreFont" FontColor="255,0,0,0"
            HAlign="Center" VAlign="Center" />
  
  <fuiImageBox Name="WhiteMask" Left="0" Top="0" Width="800" Height="600"
               Image="WhiteImg" FillMethod="LeftTop" BlendColor="0,0,0,0" />
  
  <fuiImageBox Name="Hint" Left="250" Top="60" Width="300" Height="92"
               Image="GameOverImg" FillMethod="LeftTop" BlendColor="0,0,0,0" />
  <fuiImageBox Name="GameHint" Left="280" Top="200" Width="230" Height="147"
               Image="HintImg" FillMethod="LeftTop" BlendColor="0,0,0,0" />
  
  <fuiImageBox Name="ScoreBoard" Left="220" Top="160" Width="360" Height="370"
               Image="ScoreBoardImg" FillMethod="LeftTop" BlendColor="0,0,0,0">
    <fuiImageBox Name="ScoreBoard.NewMaxScore" Left="210" Top="90" Width="48" Height="21"
                 Image="NewMaxScoreImg" FillMethod="LeftTop" BlendColor="0,0,0,0" />
    <fuiLabel Name="ScoreBoard.Score" Left="20" Top="52" Width="300" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Center" VAlign="Center" />
    <fuiLabel Name="ScoreBoard.MaxScore" Left="20" Top="112" Width="300" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Center" VAlign="Center" />
    <fuiImagedButton Name="ScoreBoard.PlayAgain" Left="0" Top="240" Width="178" Height="105"
                     Image="PlayAgain_Default" BlendColor="0,0,0,0"
                     ActiveImage="PlayAgain_Actived" ClickImage="PlayAgain_Clicked" />
    <fuiImagedButton Name="ScoreBoard.ShowScore" Left="178" Top="240" Width="178" Height="105"
                     Image="ShowScore_Default" BlendColor="0,0,0,0"
                     ActiveImage="ShowScore_Actived" ClickImage="ShowScore_Clicked" />
  </fuiImageBox>
  
  <fuiImageBox Name="Statistics" Left="70" Top="140" Width="660" Height="420" MouseTrans="true"
               Image="StatisticsImg" FillMethod="LeftTop" BlendColor="0,0,0,0">
    <fuiLabel Name="Statistics.TotalGameCount" Left="72" Top="90" Width="120" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Left" VAlign="Center" />
    <fuiLabel Name="Statistics.MaxCollisionPipe" Left="72" Top="150" Width="120" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Left" VAlign="Center" />
    <fuiLabel Name="Statistics.MaxScore" Left="72" Top="210" Width="120" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Left" VAlign="Center" />
    <fuiLabel Name="Statistics.TopPipeCollision" Left="470" Top="90" Width="120" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Right" VAlign="Center" />
    <fuiLabel Name="Statistics.BottomPipeCollision" Left="470" Top="150" Width="120" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Right" VAlign="Center" />
    <fuiLabel Name="Statistics.GroundCollision" Left="470" Top="210" Width="120" Height="35"
              FontName="ScoreFontMini" FontColor="0,0,0,0"
              HAlign="Right" VAlign="Center" />
              
    <!-- 图表容器 -->
    <fuiImageBox Name="Statistics.ScoreGraphContainer" Left="50" Top="290" Width="550" Height="80" />
    
    <!-- 用于接收鼠标消息 -->
    <fuiImageBox Name="Statistics.MsgMask" Left="0" Top="0" Width="660" Height="400"
                 BlendColor="0,0,0,0" />
  </fuiImageBox>
  
  <fuiImageBox Name="BlackMask" Left="0" Top="0" Width="800" Height="600" MouseTrans="true"
               Image="BlackImg" FillMethod="LeftTop" BlendColor="255,0,0,0" />
</fancyUILayout>
